<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	
	<groupId>com.vilt</groupId>
	<artifactId>minium</artifactId>
	<version>2.0.0-SNAPSHOT</version>
	
	<name>Minium 2</name>
	<packaging>pom</packaging>
	
	<developers>
		<developer>
			<id>rui.figueira</id>
			<name>Rui Figueira</name>
			<email>rui.figueira@vilt-group.com</email>
			<organization>VILT Group</organization>
			<organizationUrl>http://www.vilt-group.com</organizationUrl>
			<timezone>Europe/Lisbon</timezone>
		</developer>
	</developers>
	
	<scm>
		<connection>scm:svn:http://svn.vilt-group.com/svn/internal/testing/minium/trunk</connection>
		<developerConnection>scm:svn:http://svn.vilt-group.com/svn/internal/testing/minium/trunk</developerConnection>
		<url>http://svn.vilt-group.com/svn/internal/testing/minium/trunk</url>
	</scm>

	<organization>
		<name>VILT Group</name>
		<url>http://www.vilt-group.com</url>
	</organization>
		
	<modules>
	    <module>minium-core</module>
   	    <module>minium-speech</module>
   	    <module>minium-webconsole</module>
   	    <module>minium-webconsole-jetty</module>
	</modules>
	
	<properties>
	    <java.version>1.6</java.version>
	    <selenium.version>2.33.0</selenium.version>
	    <guava.version>14.0.1</guava.version>
	    <jetty.version>8.1.11.v20130520</jetty.version>
	    
	    <!-- License properties -->
		<license.name>apache_v2</license.name>
		<license.inception.year>2013</license.inception.year>
		<license.organization.name>VILT Group</license.organization.name>
		<license.project.name>Minium</license.project.name>
	</properties>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
					<compilerversion>${java.version}</compilerversion>
					<verbose>true</verbose>
					<compilerVersion>${java.version}</compilerVersion>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.8.1</version>
				<configuration>
					<excludePackageNames>*.impl.*</excludePackageNames>
					<links>
						<link>http://selenium.googlecode.com/svn/trunk/docs/api/java/</link>
						<link>http://docs.guava-libraries.googlecode.com/git-history/v12.0/javadoc/</link>
					</links>
				</configuration>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.codehaus.mojo</groupId>
										<artifactId>license-maven-plugin</artifactId>
										<versionRange>[1.5,)</versionRange>
										<goals>
											<goal>update-file-header</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

</project>