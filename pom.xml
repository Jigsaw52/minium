<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	
	<groupId>com.vilt.minium</groupId>
	<artifactId>minium</artifactId>
	<version>0.9.0-SNAPSHOT</version>
	
	<name>Minium - Parent</name>
	<packaging>pom</packaging>
	
	<developers>
		<developer>
			<id>rui.figueira</id>
			<name>Rui Figueira</name>
			<email>rui.figueira@vilt-group.com</email>
			<organization>VILT Group</organization>
			<organizationUrl>http://www.vilt-group.com</organizationUrl>
			<timezone>Europe/Lisbon</timezone>
		</developer>
	</developers>
	
	<scm>
		<connection>scm:git:https://github.com/viltgroup/minium.git</connection>
		<developerConnection>scm:git:git://github.com/viltgroup/minium.git</developerConnection>
		<url>https://github.com/viltgroup/minium</url>
	</scm>

	<organization>
		<name>VILT Group</name>
		<url>http://www.vilt-group.com</url>
	</organization>
		
	<modules>
	    <module>minium-core</module>
   	    <module>minium-speech</module>
   	    <module>minium-webconsole</module>
   	    <module>minium-thirdparty</module>
   	    <module>minium-app</module>
	</modules>
	
	<properties>
	    <java.version>1.6</java.version>
	    <selenium.version>2.33.0</selenium.version>
	    <guava.version>14.0.1</guava.version>
	    <jetty.version>8.1.11.v20130520</jetty.version>
	    
	    <!-- License properties -->
		<license.name>apache_v2</license.name>
		<license.inception.year>2013</license.inception.year>
		<license.organization.name>VILT Group</license.organization.name>
		<license.project.name>Minium</license.project.name>
	</properties>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<compilerversion>${java.version}</compilerversion>
					<source>${java.version}</source>
					<target>${java.version}</target>
					<verbose>true</verbose>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<excludePackageNames>*.impl.*</excludePackageNames>
					<links>
						<link>http://selenium.googlecode.com/svn/trunk/docs/api/java/</link>
						<link>http://docs.guava-libraries.googlecode.com/git-history/v${guava.version}/javadoc/</link>
					</links>
				</configuration>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.4.1</version>
				<configuration>
					<useReleaseProfile>false</useReleaseProfile>
					<releaseProfiles>release</releaseProfiles>
					<autoVersionSubmodules>true</autoVersionSubmodules>
				</configuration>
		    </plugin>
		</plugins>
	</build>
		
	<profiles>
        <profile>
            <id>win32</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <platform.id>win32</platform.id>
                <chromedriver.osname.id>win32</chromedriver.osname.id>
                <chromedriver.version>2.1</chromedriver.version>
                <chromium.revision>208730</chromium.revision>
                <chromium.osname.id>win32</chromium.osname.id>
                <chromium.folder.dir>Win</chromium.folder.dir>
                <basedir.var>%BASEDIR%</basedir.var>
            </properties>
        </profile>
        <profile>
            <id>mac32</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <platform.id>mac32</platform.id>
                <chromedriver.osname.id>mac32</chromedriver.osname.id>
                <chromedriver.version>2.1</chromedriver.version>
                <chromium.revision>208742</chromium.revision>
                <chromium.osname.id>mac</chromium.osname.id>
                <chromium.folder.dir>Mac</chromium.folder.dir>
                <basedir.var>$BASEDIR</basedir.var>
            </properties>
        </profile>
        <profile>
            <id>linux32</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <platform.id>linux32</platform.id>
                <chromedriver.osname.id>linux32</chromedriver.osname.id>
                <chromedriver.version>2.1</chromedriver.version>
                <chromium.revision>208727</chromium.revision>
                <chromium.osname.id>linux</chromium.osname.id>
                <chromium.folder.dir>Linux</chromium.folder.dir>
                <basedir.var>$BASEDIR</basedir.var>
            </properties>
        </profile>
        <profile>
            <id>linux64</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <platform.id>linux64</platform.id>
                <chromedriver.osname.id>linux64</chromedriver.osname.id>
                <chromedriver.version>2.1</chromedriver.version>
                <chromium.revision>208727</chromium.revision>
                <chromium.osname.id>linux</chromium.osname.id>
                <chromium.folder.dir>Linux_x64</chromium.folder.dir>
                <basedir.var>$BASEDIR</basedir.var>
            </properties>
        </profile>
    </profiles>
    
</project>